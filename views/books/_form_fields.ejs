<div>
  <label for="titleInput">Title</label>
  <input type="text" id="titleInput" name="title" value="<%= book.title %> " />
</div>
<div>
  <label for="auhtorInput">Author</label>
  <select name="author" id="auhtorInput">
    <% authors.forEach(author => { %>
      <% if (author.id === book.authorId) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else {%>
        <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %>
    <% }) %>
  </select>
</div>
<div>
  <label for="publishDateInput">Publish Date</label>
  <input
    type="date"
    id="publishDateInput"
    name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"
  />
</div>
<div>
  <label for="pageCountInput">Page Count</label>
  <input type="number" id="pageCountInput" name="pageCount" min="1" value="<%= book.pageCount %>" />
</div>
<div>
  <label for="coverInput">Cover</label>
  <input type="file" id="coverInput" name="cover" />
</div>
<div>
  <label for="descInput">Description</label>
  <textarea name="description" id="descInput"><%= book.description %></textarea>
</div> 

